<?xml version="1.0" encoding="UTF-8"?>
<resources>
   <style name="Theme.Material" parent="@*android:style/Theme.Material">
     <item name="android:navigationBarColor">@*common:color/navigation_bar</item>
     <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
     <item name="android:colorBackground">@*common:color/bg_dark</item>
     <item name="android:actionBarTheme">@style/ThemeOverlay.Material.ActionBar</item>
     <item name="android:colorPrimary">@*common:color/ab_color</item>
     <item name="android:colorPrimaryDark">@*common:color/accent_dark</item>
     <item name="android:colorAccent">@*common:color/accent</item>
   </style>

   <style name="Theme.ActionBar" parent="@*android:style/Widget.Material.ActionBar">
     <item name="android:colorControlNormal">@*common:color/ab_text_color</item>
     <item name="android:background">@*common:drawable/ab_gradient</item>
     <item name="android:colorPrimary">@*common:drawable/ab_gradient</item>
     <item name="android:colorPrimaryDark">@*common:drawable/ab_gradient</item>
     <item name="android:titleTextStyle">@style/TitleTextStyle</item>
   </style>
   <style name="TitleTextStyle" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Title">
     <item name="android:textColor">@*common:color/ab_text_color</item>
   </style>

   <style name="ThemeOverlay.Material.ActionBar" parent="@*android:style/ThemeOverlay.Material">
     <item name="android:colorControlNormal">@*common:color/ab_text_color</item>
   </style>

   <style name="Theme.Material.Light" parent="@*android:style/Theme.Material.Light">
      <item name="android:navigationBarColor">@*common:color/navigation_bar</item>
      <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
      <item name="android:colorPrimary">@*common:color/ab_color</item>
      <item name="android:colorPrimaryDark">@*common:color/accent_dark</item>
      <item name="android:colorAccent">@*common:color/accent</item>
      <item name="android:backgroundStacked">@*common:color/accent</item>
      <item name="android:backgroundSplit">@*common:color/accent</item>
      <item name="android:actionBarTheme">@style/ThemeOverlay.Material.ActionBar</item>
      <item name="android:colorBackground">@*common:color/bg_light</item>
   </style>

   <style name="TextAppearance.Material.Widget.Button" parent="@style/TextAppearance.Material.Button" />
   <style name="TextAppearance.Material.Button" parent="@*android:style/TextAppearance.Material">
      <item name="android:textSize">@*android:dimen/text_size_button_material</item>
      <item name="android:textColor">@*common:color/ab_text_color</item>
      <item name="android:textAllCaps">true</item>
      <item name="android:fontFamily">@*android:string/font_family_button_material</item>
   </style>

   <style name="ThemeOverlay.Material.Dark.ActionBar" parent="@*android:style/ThemeOverlay.Material.Dark">
      <item name="android:colorControlNormal">@*common:color/ab_text_color</item>
      <item name="android:colorBackground">@*common:color/ab_color</item>
   </style>

   <style name="TextAppearance.Material.Notification" parent="@*android:style/TextAppearance.Material">
      <item name="android:textSize">@*android:dimen/notification_text_size</item>
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Notification.Emphasis" parent="@*android:style/TextAppearance.Material.Notification">
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Notification.Info" parent="@*android:style/TextAppearance.Material.Notification">
      <item name="android:textSize">@*android:dimen/notification_subtext_size</item>
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Notification.Line2" parent="@*android:style/TextAppearance.Material.Notification">
      <item name="android:textSize">@*android:dimen/notification_subtext_size</item>
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Notification.Time" parent="@*android:style/TextAppearance.Material.Notification">
      <item name="android:textSize">@*android:dimen/notification_subtext_size</item>
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Notification.Title" parent="@*android:style/TextAppearance.Material.Notification">
      <item name="android:textSize">@*android:dimen/notification_title_text_size</item>
      <item name="android:textColor">@*common:color/notification_item_text</item>
   </style>

   <style name="TextAppearance.Material.Widget.Toolbar.Title" parent="@*common:style/TextAppearance.Material.Widget.Toolbar.Title" />
   <style name="TextAppearance.Material.Widget.Toolbar.Subtitle" parent="@*common:style/TextAppearance.Material.Widget.Toolbar.Subtitle" />
</resources>
